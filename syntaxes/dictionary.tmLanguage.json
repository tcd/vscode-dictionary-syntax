{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "dictionary",
    "scopeName": "source.dictionary",
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#flags"
        }
    ],
    "repository": {
        "comment": {
            "name": "comment.line.dictionary",
            "begin": "#+\\s+?",
            "end": "$",
            "patterns": []
        },
        "flags": {
            "patterns": [
                {
                    "match": "^\\(!)(.+)$",
                    "captures": {
                        "1": {
                            "name": "keyword.operator.flag.dictionary"
                        },
                        "2": {
                            "name": "variable.flaged.dictionary"
                        }
                    }
                }
            ]
        }
    }
}